{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "price": {
      "type": "string"
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "specialPrice": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "stockQuantity": {
      "type": "string"
    },
    "categories": {
      "type": "enumeration",
      "enum": [
        "Sports",
        "Clothes",
        "Electronics"
      ]
    }
  }
}
